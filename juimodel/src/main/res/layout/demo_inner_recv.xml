<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.recv.LayoutManagers"/>

        <import type="android.support.v7.widget.LinearLayoutManager"/>

        <variable
            name="itemInnerRecv"
            type="com.yun.juimodel.ui.home.vm.ItemRecvViewModel"/>

        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_item_recy_title"
            android:layout_width="wrap_content"
            android:text="@{itemInnerRecv.title}"
            tools:text="标题"
            android:textSize="15dp"
            android:textColor="@color/black_2e33"
            android:padding="@dimen/normal_16dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:visibility="@{itemInnerRecv.needShowMore ? View.VISIBLE : View.GONE}"
            android:text="@string/item_show_more"
            android:textSize="13dp"
            android:textColor="@color/gray_8b8b"
            bind:layout_constraintRight_toRightOf="parent"
            android:onClick="@{itemInnerRecv::showMore}"
            android:padding="@dimen/normal_16dp"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_item_recy"
            android:layout_width="match_parent"
            bind:layout_constraintTop_toBottomOf="@+id/home_item_recy_title"
            android:layout_height="wrap_content"
            bind:dataList="@{itemInnerRecv.items}"
            bind:itemBinding="@{itemInnerRecv.recvListBinding}"
            bind:layout_constraintStart_toStartOf="parent"
            android:paddingStart="@dimen/normal_16dp"
            android:paddingLeft="@dimen/normal_16dp"
            android:clipToPadding="false"
            bind:layoutManager="@{LayoutManagers.linear(LinearLayoutManager.HORIZONTAL,false)}"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/normal_16dp"
            bind:layout_constraintTop_toBottomOf="@+id/home_item_recy"
            android:background="@color/divide_line_color"
            android:layout_height="@dimen/spacing_divide_line"/>
    </android.support.constraint.ConstraintLayout>
</layout>
