<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.yun.helper.Data2UIhelper"/>

        <variable
            name="commenHead"
            type="com.yun.juimodel.ui.home.m.Comment.ScoreListBean"/>

        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        tools:padding="@dimen/normal_16dp"
        bind:padingltr="@{@dimen/normal_16dp}"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/game_detail_comm_score"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="@{commenHead.score>0?View.VISIBLE:View.GONE}"
            android:padding="@dimen/spacing_8"
            android:background="@drawable/img_scorebg_218"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <TextView
                android:maxLines="1"
                android:textSize="12dp"
                android:textColor="@color/tv_orign_ff88"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="@string/item_game_detail_comm_userscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerInParent="true"
                tools:text="9.8"
                android:textSize="35dp"
                android:text="@{String.valueOf(commenHead.score)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.blueprint.widget.JRatingBar
                android:layout_alignParentBottom="true"
                bind:starWidth="11dp"
                bind:starHeight="11dp"
                bind:starDistance="2dp"
                bind:starClickable="false"
                android:clickable="false"
                bind:rbProgress="@{commenHead.score}"
                bind:starBackground="@drawable/btn_star_74_normal"
                bind:starDrawBackground="@drawable/btn_star_74_highlight"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:padding="@dimen/spacing_8"
            bind:layout_constraintTop_toTopOf="@+id/game_detail_comm_score"
            bind:layout_constraintBottom_toBottomOf="@+id/game_detail_comm_score"
            bind:layout_constraintRight_toRightOf="parent"
            android:visibility="@{commenHead.score>0?View.VISIBLE:View.GONE}"
            android:layout_marginLeft="@dimen/spacing_16"
            bind:layout_constraintLeft_toRightOf="@+id/game_detail_comm_score"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <com.blueprint.widget.ScoreDistribChart
                tools:background="#f0f0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/game_detail_myto_comment"
            android:layout_width="match_parent"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/game_detail_comm_score"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/game_detail_to_comment"
                android:layout_width="95dp"
                android:gravity="center"
                android:textColor="@color/j_white"
                android:textSize="14dp"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/btn_orign_round_13"
                android:text="@string/game_detail_to_comment"
                android:onClick="@{commenHead::toComment}"
                android:visibility="@{commenHead.scored?View.GONE:View.VISIBLE}"
                android:layout_marginTop="30dp"
                android:layout_height="26dp"/>

            <View
                android:visibility="@{commenHead.scored?View.GONE:View.VISIBLE}"
                bind:layout_constraintTop_toTopOf="@+id/game_detail_to_comment"
                bind:layout_constraintBottom_toBottomOf="@+id/game_detail_to_comment"
                bind:layout_constraintRight_toLeftOf="@+id/game_detail_to_comment"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/divide_line_color"/>

            <View
                android:visibility="@{commenHead.scored?View.GONE:View.VISIBLE}"
                bind:layout_constraintTop_toTopOf="@+id/game_detail_to_comment"
                bind:layout_constraintBottom_toBottomOf="@+id/game_detail_to_comment"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                bind:layout_constraintLeft_toRightOf="@+id/game_detail_to_comment"
                android:layout_height="0.5dp"
                android:background="@color/divide_line_color"/>

            <android.support.constraint.ConstraintLayout
                tools:visibility="gone"
                android:layout_width="match_parent"
                android:visibility="@{commenHead.scored?View.VISIBLE:View.GONE}"
                android:padding="@dimen/normal_16dp"
                android:background="@drawable/btn_gray_round_5"
                android:layout_height="wrap_content">

                <com.yun.widget.AvatorImageView
                    android:id="@+id/game_detail_my_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    tools:background="#f0f"
                    loadAvator="@{Data2UIhelper.getMiddlePortrait(commenHead.uid)}"
                    tools:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/game_detail_my_commtip"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_2e33"
                    android:textSize="@dimen/spacing_14"
                    android:layout_height="wrap_content"
                    bind:layout_constraintTop_toTopOf="@+id/game_detail_my_icon"
                    bind:layout_constraintBottom_toBottomOf="@+id/game_detail_my_icon"
                    bind:layout_constraintLeft_toRightOf="@+id/game_detail_my_icon"
                    android:layout_marginLeft="@dimen/spacing_12"
                    android:text="我的评价"/>

                <com.blueprint.widget.JRatingBar
                    android:id="@+id/game_detail_comm_rb"
                    bind:starWidth="12dp"
                    bind:starHeight="12dp"
                    bind:starDistance="2dp"
                    bind:starClickable="false"
                    android:clickable="false"
                    bind:rbProgress="@{commenHead.myScore}"
                    bind:layout_constraintTop_toTopOf="@+id/game_detail_my_icon"
                    bind:layout_constraintBottom_toBottomOf="@+id/game_detail_my_icon"
                    bind:layout_constraintLeft_toRightOf="@+id/game_detail_my_commtip"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    bind:layout_constraintLeft_toRightOf="@+id/game_detail_comm_rb"
                    bind:layout_constraintTop_toTopOf="@+id/game_detail_my_icon"
                    bind:layout_constraintBottom_toBottomOf="@+id/game_detail_my_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="9.5"
                    android:textSize="@dimen/spacing_14"
                    android:textColor="@color/tv_orign_ff88"
                    android:layout_marginLeft="@dimen/spacing_6"
                    android:text="@{String.valueOf(commenHead.myScore)}"/>

                <april.yun.widget.PromptImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingLeft="@dimen/spacing_4"
                    android:onClick="@{commenHead::toEditComment}"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toTopOf="@+id/game_detail_my_icon"
                    bind:layout_constraintBottom_toBottomOf="@+id/game_detail_my_icon"
                    android:src="@drawable/btn_editevaluate_26_darkgray"/>

                <ImageView
                    android:id="@+id/iv_con_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_8"
                    bind:layout_constraintLeft_toLeftOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/game_detail_my_icon"
                    android:layout_marginTop="@dimen/normal_16dp"
                    android:src="@drawable/img_quotes_lightgray"/>

                <TextView
                    android:id="@+id/game_detail_my_content"
                    bind:layout_constraintTop_toBottomOf="@+id/game_detail_my_icon"
                    android:layout_marginTop="@dimen/normal_16dp"
                    bind:layout_constraintLeft_toRightOf="@+id/iv_con_left"
                    android:layout_width="0dp"
                    bind:layout_constraintRight_toLeftOf="@+id/iv_con_right"
                    android:layout_marginLeft="@dimen/spacing_8"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/gray_8b8b"
                    android:lineSpacingExtra="@dimen/common_line_spac"
                    android:text="@{commenHead.content}"
                    android:layout_marginRight="@dimen/spacing_8"
                    tools:text="咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽 咕叽咕叽"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_con_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintBottom_toBottomOf="@+id/game_detail_my_content"
                    android:layout_marginTop="@dimen/normal_16dp"
                    android:src="@drawable/img_quotes_lightgray"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            bind:layout_constraintTop_toBottomOf="@+id/game_detail_myto_comment"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_gray_round_5"
            android:layout_height="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:drawableLeft="@drawable/btn_evaluate_26_orange"
                android:drawablePadding="@dimen/spacing_4"
                android:textColor="@color/tv_orign_ff88"
                android:text="评价列表"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="11dp"
                android:layout_height="wrap_content"
                tools:text="4位参与了评价"
                android:textColor="@color/gray_8b8b"
                android:text="@{commenHead.commentNum}"/>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>