<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <april.yun.JPagerSlidingTabStrip
        android:id="@+id/jbase_tab_strip"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/normal_16dp"
        android:layout_marginRight="@dimen/normal_16dp"
        android:background="@android:color/white"
        android:layout_height="48dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_6"
        android:background="@color/divide_line_color"/>
    <com.yun.widget.JViewPager
        android:id="@+id/jbase_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jbase_tab_strip"/>
</LinearLayout>