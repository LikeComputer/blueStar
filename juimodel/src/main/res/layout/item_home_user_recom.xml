        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/divide_line"-->
        <!--bind:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:layout_marginLeft="@dimen/normal_16dp"-->
        <!--bind:layout_constraintTop_toBottomOf="@+id/home_item_userrecom_pic"-->
        <!--android:visibility="@{userRecom.isLast?View.GONE:View.VISIBLE}"-->
        <!--android:layout_marginTop="@dimen/normal_16dp"-->
        <!--android:background="@color/divide_line_color"/>-->

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/divide_line"-->
        <!--bind:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:visibility="@{userRecom.isLast?View.VISIBLE:View.GONE}"-->
        <!--bind:layout_constraintTop_toBottomOf="@+id/home_item_userrecom_pic"-->
        <!--android:layout_marginTop="@dimen/normal_16dp"-->
        <!--android:background="@color/divide_line_color"/>-->

    </android.support.constraint.ConstraintLayout>
</layout>