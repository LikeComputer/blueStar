<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="recViewModel"
            type="jzy.easybindpagelist.loadmorehelper.LoadMoreObjectViewModel"/>

        <import type="me.tatarka.bindingcollectionadapter2.recv.LayoutManagers"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/normal_16dp"
            android:layout_marginRight="@dimen/normal_16dp"
            android:layout_marginTop="@dimen/normal_16dp"
            android:background="@color/divide_line_color"/>

        <include
            android:layout_below="@+id/top_line"
            android:paddingTop="@dimen/normal_16dp"
            android:id="@+id/com_pagelist_layout"
            layout="@layout/object_pagelist_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:pageViewModel="@{recViewModel}"/>

    </RelativeLayout>
</layout>
