<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="gameRes"
            type="com.yun.juimodel.ui.home.m.Home.ResourceBean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_19"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginRight="@dimen/spacing_15"
        android:background="@drawable/home_round_conor_bg"
        android:onClick="@{gameRes::showDetail}"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_item_hotrecom_pic"
            android:layout_width="match_parent"
            tools:background="#f0f"
            bind:loadImageUrl="@{gameRes.icon}"
            bind:roundedCornerRadius="@dimen/spacing_8"
            bind:roundTopLeft="true"
            bind:roundTopRight="true"
            bind:roundBottomLeft="false"
            bind:roundBottomRight="false"
            android:layout_height="110dp"/>

        <TextView
            android:layout_width="wrap_content"
            tools:text="游戏名字"
            bind:layout_constraintTop_toBottomOf="@+id/home_item_hotrecom_pic"
            bind:layout_constraintLeft_toLeftOf="parent"
            android:text="@{gameRes.name}"
            android:textSize="@dimen/spacing_15"
            android:textColor="@color/black_2e33"
            android:padding="@dimen/spacing_11"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/home_item_hotrecom_pic"
            bind:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/spacing_11"
            android:textColor="@color/tv_orign_ff88"
            android:src="@drawable/btn_go_r_14_darkgrey"
            android:layout_height="0dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>