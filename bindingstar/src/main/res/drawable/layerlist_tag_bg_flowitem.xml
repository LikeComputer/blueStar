<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp"/>
            <stroke android:width="0.5dp" android:color="@color/j_black_a80"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp"/>
            <stroke android:width="0.5dp" android:color="@color/j_black_a80"/>
        </shape>
    </item>
    <item >
        <layer-list>
            <item android:right="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp"/>
                    <padding
                        android:bottom="3dp"
                        android:left="12dp"
                        android:right="12dp"
                        android:top="3dp"/>
                    <stroke android:width="0.5dp" android:color="@color/j_black_a80"/>
                </shape>
            </item>
            <item android:width="11dp" android:height="11dp"
                  android:gravity="right|top"
                  android:right="-12dp"
                  android:top="-2dp">
                <bitmap android:src="@drawable/btn_delete_22_lightgray" android:gravity="right|top"/>
            </item>
        </layer-list>
    </item>
</selector>
