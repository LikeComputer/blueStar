<?xml version="1.0" encoding="utf-8"?>
<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:minLevel="0"
        android:maxLevel="1"
        android:drawable="@drawable/left_38_message"/>
    <item
        android:maxLevel="13"
        android:minLevel="2">
        <layer-list>
            <item android:drawable="@drawable/left_38_message"/>
            <item
                android:width="6dp"
                android:height="6dp"
                android:top="-1dp"
                android:gravity="right|top">
                <shape android:shape="oval">
                    <solid android:color="#ff5114"/>
                </shape>
            </item>
        </layer-list>
    </item>
</level-list>

